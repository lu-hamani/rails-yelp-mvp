<div class="container">
  <h1 class="text-center">Add review</h1>
  <div class="row">
    <div class="col-xs-12 col-sm-6 col-sm-offset-3">
      <%= simple_form_for [@restaurant, @review] do |f| %>
        <%= f.input :content %>
        <%= f.input :rating, placeholder: "Your rating must be between 0 and 5" %>
        <%= f.submit %>
      <% end %>
      <%= link_to "Back to index", restaurants_path %>
    </div>
  </div>
</div>
