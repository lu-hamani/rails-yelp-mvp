<h1>Admin::Reviews#edit</h1>
<p>Find me in app/views/admin/reviews/edit.html.erb</p>

<%= simple_form_for [@restaurant, @review] do |f| %>

  <% if @review.errors.any? %>
    <ul>
    <% @review.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
    </ul>
  <% end %>

  <%= f.input :content %>
  <%= f.input :rating %>
  <%= f.submit %>
<% end %>
